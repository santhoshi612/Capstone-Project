  <!-- Glowing Cursor -->
  <div class="cursor"></div>

  <script>
    function openQuizPage() {
      window.location.href = "q&a.html";
    }

    const cursor = document.querySelector('.cursor');
    let mouseX = 0, mouseY = 0;
    let currentX = 0, currentY = 0;
    let hue = 0;

    // Smooth movement
    function animate() {
      currentX += (mouseX - currentX) * 0.15;
      currentY += (mouseY - currentY) * 0.15;
      cursor.style.left = currentX + 'px';
      cursor.style.top = currentY + 'px';
      requestAnimationFrame(animate);
    }
    animate();

    // Update position and create rainbow trail
    document.addEventListener('mousemove', (e) => {
      mouseX = e.clientX;
      mouseY = e.clientY;
      hue = (hue + 5) % 360;

      const trail = document.createElement('div');
      trail.classList.add('trail');
      trail.style.left = `${e.clientX}px`;
      trail.style.top = `${e.clientY}px`;
      trail.style.background = `radial-gradient(circle, hsl(${hue}, 100%, 70%), transparent)`;
      trail.style.boxShadow = `
        0 0 25px hsl(${hue}, 100%, 60%),
        0 0 70px hsl(${hue + 60}, 100%, 50%)
      `;
      document.body.appendChild(trail);
      setTimeout(() => trail.remove(), 1000);

      cursor.style.background = `radial-gradient(circle, hsl(${hue}, 100%, 70%), hsl(${(hue + 90) % 360}, 100%, 50%))`;
      cursor.style.boxShadow = `
        0 0 40px hsl(${hue}, 100%, 70%),
        0 0 90px hsl(${hue + 120}, 100%, 60%),
        0 0 160px hsl(${hue + 240}, 100%, 60%)
      `;
    });

    // Click pulse effect
    document.addEventListener('click', () => {
      cursor.style.transform = 'translate(-50%, -50%) scale(2)';
      setTimeout(() => cursor.style.transform = 'translate(-50%, -50%) scale(1)', 200);
    });
  </script>
</body>
